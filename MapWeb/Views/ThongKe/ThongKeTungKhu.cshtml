
@{
    ViewBag.Title = "ThongKeTungKhu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentJs{
    <script>
        var app = angular.module("myApp", []);

        app.controller("myCtrl", function ($scope, $http) {
            $http.get("http://localhost:8177/api/thongke?date1=2018-01-1?date2=2018-05-23").then(function (response) {
                $scope.ds = response.data;
            });

            // table control
            $scope.orderbyme = function (x) {
                $scope.myOrderBy = x;
            }
        });
</script>
    
    }
<body ng-app="myApp" ng-controller="myCtrl" >

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <form class="form-inline mr-auto">
                    <div class="ml-auto">
                        <input ng-model="search" class="form-control mr-sm-2" type="text" placeholder="Search">
                       
                    </div>


                </form>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th ng-click="orderbyme('id')">id</th>
                <th ng-click="orderbyme('name')">name</th>
                <th ng-click="orderbyme('phone')">phone</th>
               
            </tr>

        </thead>
        <tbody>
            <tr ng-repeat="x in ds | orderBy:myOrderBy | filter : search">
                <td>{{x.id}}</td>
                <td>{{x.name}}</td>
                <td>{{x.phone}}</td>
   
            </tr>
        </tbody>
    </table>

</body>


