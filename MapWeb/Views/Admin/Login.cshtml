   <style>
       li{
           color: orangered;
       }
   </style>
</head>
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
              
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                    {
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Tài Khoản</label>
                            <input name="username"  class="form-control" placeholder="username">
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label>Mật Khẩu</label>
                            <input name="password" type="password" class="form-control" placeholder="Password">
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <span>
                            <input type="checkbox" class="checkbox">
                            Keep me signed in
                        </span>
                        <p id="mes"></p>
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/plugins.js"></script>
    <script src="~/Content/assets/js/main.js"></script>

</body>
    
</html>
