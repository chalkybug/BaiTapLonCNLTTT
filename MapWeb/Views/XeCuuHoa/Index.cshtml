
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentJs{
    <script>
        var app = angular.module("myApp", []);

        app.controller("myCtrl", function ($scope, $http) {
            $http.get("http://localhost:8177/api/xecuuhoa").then(function (response) {
                $scope.dsXeCuuHoa = response.data;
            });

            $scope.loadData = function () {
                $http.get("http://localhost:8177/api/xecuuhoa").then(function (response) {
                    $scope.dsXeCuuHoa = response.data;
                });
            }
            $scope.create = function () {
                $.ajax({
                    type: "post",
                    url: "http://localhost:8177/api/xecuuhoa",
                    dataType: "text",
                    data: {
                        name: $('#nameCreate').val(),
                        idTramCuuHoa: $('#idTramCuuHoaCreate').val(),
                        capacity: $('#capacityCreate').val(),
                        maxHeight: $('#maxHeightCreate').val(),
                        size: $('#sizeCreate').val(),
                        status: $('#statusCreate').val(),
                    },
                    success: function (response) {
                        console.log("success create");
                        $scope.loadData();
                    }
                });

            }

            $scope.btnEdit = function (id) {
                $scope.id = id;

                $.ajax({
                    type: "GET",
                    url: "http://localhost:8177/api/xecuuhoa",
                    dataType: "json",
                    success: function (response) {
                        response.forEach(element => {
                            if (element.id == id) {
                                console.log(element.idTramCuuHoa);

                                $('#nameEdit').val(element.name);
                                $('#idTramCuuHoaEdit').val(element.idTramCuuHoa);
                                $('#capacityEdit').val(element.maxHeight);
                                $('#maxHeightEdit').val(element.maxHeight);
                                $('#sizeEdit').val(element.size);
                                $('#statusEdit').val(element.status);
                            }
                        });



                    }
                });

            }
            $scope.btnCreate = function () {
                $scope.Clear();
            }

            $scope.Clear = function () {
                $('#nameCreate').val("");
                $('#idTramcuuhoaCreate').val("");
                $('#capacityCreate').val("");
                $('#maxHeightCreate').val("");
                $('#sizeCreate').val("");
                $('#statusCreate').val("");

                $('#nameEdit').val("");
                $('#idTramcuuhoaEdit').val("");
                $('#capacityEdit').val("");
                $('#maxHeightEdit').val("");
                $('#sizeEdit').val("");
                $('#statusEdit').val("");
            }

            $scope.Edit = function () {
                console.log($scope.id);

                $.ajax({
                    type: "PUT",
                    url: "http://localhost:8177/api/xecuuhoa",
                    dataType: "text",
                    data: {
                        id: $scope.id,
                        name: $('#nameEdit').val(),
                        idTramCuuHoa: $('#idTramCuuHoaEdit').val(),
                        capacity: $('#capacityEdit').val(),
                        maxHeight: $('#maxHeightEdit').val(),
                        size: $('#sizeEdit').val(),
                        status: $('#statusEdit').val(),

                    },
                    success: function (response) {
                        console.log("success edit");
                        $scope.loadData();
                    }
                });

            }


            $scope.btnDelete = function (id) {
                $scope.idDelete = id;
            }
            $scope.Delete = function () {
                $.ajax({
                    type: "DELETE",
                    url: "http://localhost:8177/api/xecuuhoa/" + $scope.idDelete,
                    dataType: "text",
                    success: function (response) {
                        console.log("xóa thành công");
                        $scope.loadData();
                    }
                });
            }
            // table control
            $scope.orderbyme = function (x) {
                $scope.myOrderBy = x;
            }
        });
    </script>


}
<body ng-app="myApp" ng-controller="myCtrl">


    <!-- test angular-->
    <div class="container">

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <form class="form-inline mr-auto">
